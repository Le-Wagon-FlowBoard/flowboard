<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4 text-light-grey">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'simple_form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { class: 'form-control', autocomplete: 'email' },
                      label_html: { class: 'mb-2 text-light-grey' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { class: 'form-control', autocomplete: 'current-password' },
                      label_html: { class: 'mb-2 text-light-grey' } %>
          <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper_html: { class: 'mb-3' } if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
