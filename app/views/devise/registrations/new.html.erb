<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4 text-light-grey">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'simple_form' }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: 'form-control', autocomplete: 'email' },
                    label_html: { class: 'mb-2 text-light-grey' } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: 'form-control', autocomplete: 'new-password' },
                    label_html: { class: 'mb-2 text-light-grey' } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: 'form-control', autocomplete: 'new-password' },
                    label_html: { class: 'mb-2 text-light-grey' } %>
        <%= f.input :first_name,
                    required: true,
                    input_html: { class: 'form-control', autocomplete: 'first_name' },
                    label_html: { class: 'mb-2 text-light-grey' } %>
        <%= f.input :last_name,
                    required: true,
                    input_html: { class: 'form-control', autocomplete: 'last_name' },
                    label_html: { class: 'mb-2 text-light-grey' } %>

        <div class="form-group">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
