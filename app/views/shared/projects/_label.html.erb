
<!-- Modal pour la liste des libellÃ©s existants et leur modification -->
<div class="modal fade" id="showLabelModal" tabindex="-1" aria-labelledby="showLabelModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header text-light-grey bg-dark-background border-0">
        <h5 class="modal-title" id="showLabelModalLabel">Edit Labels</h5>
        <%= image_tag "plus.svg", class: "icon rotate-45", data: { bs_dismiss: "modal" } %>
        <!-- Add a button to add a Label-->
        <button type="button" class="btn btn-add bg-white" data-bs-toggle="modal" data-bs-target="#createLabelModal">
          <i class="fas fa-plus"></i>
      </div>
      <div class="modal-body text-light-grey bg-dark-background">
        <% @project.labels.each do |label| %>
          <%= form_for label, url: project_label_path(@project, label), method: :patch, remote: true, html: { class: "form" } do |f| %>
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-input", placeholder: "Name Label", value: label.name %>
            <% if label.errors.full_messages_for(:name).any? %>
              <p class="text-danger"><%= label.errors.full_messages_for(:name).first %></p>
            <% end %>
            <%= f.label :color, class: "form-label mt-3" %>
            <%= f.color_field :color, class: "form-input h-50", placeholder: "Color Label", value: label.color %>
            <% if label.errors.full_messages_for(:color).any? %>
              <p class="text-danger"><%= label.errors.full_messages_for(:color).first %></p>
            <% end %>
            <%= f.hidden_field :project_id, value: @project.id %>
            <div class="modal-footer mx-0 px-0 border-0">
              <%= f.button "Update Label", class: "main-btn" %>
            </div>

          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "labels/create" %>